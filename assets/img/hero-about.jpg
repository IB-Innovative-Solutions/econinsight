<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8f9fa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e9ecef;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="chartGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b35;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#e55a2b;stop-opacity:0.6" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="400" fill="url(#bgGradient)"/>
  
  <!-- Abstract business elements -->
  <!-- Chart bars -->
  <rect x="50" y="250" width="30" height="80" fill="url(#chartGradient)" opacity="0.8"/>
  <rect x="90" y="220" width="30" height="110" fill="url(#chartGradient)" opacity="0.9"/>
  <rect x="130" y="180" width="30" height="150" fill="url(#chartGradient)"/>
  <rect x="170" y="200" width="30" height="130" fill="url(#chartGradient)" opacity="0.7"/>
  <rect x="210" y="160" width="30" height="170" fill="url(#chartGradient)" opacity="0.8"/>
  
  <!-- Floating geometric shapes -->
  <circle cx="450" cy="120" r="25" fill="#ff6b35" opacity="0.3"/>
  <circle cx="480" cy="180" r="15" fill="#ff6b35" opacity="0.4"/>
  <circle cx="420" cy="200" r="20" fill="#ff6b35" opacity="0.2"/>
  
  <!-- Hexagon pattern -->
  <polygon points="500,80 520,90 520,110 500,120 480,110 480,90" fill="none" stroke="#ff6b35" stroke-width="2" opacity="0.3"/>
  <polygon points="520,140 540,150 540,170 520,180 500,170 500,150" fill="none" stroke="#ff6b35" stroke-width="2" opacity="0.2"/>
  
  <!-- Connection lines -->
  <line x1="300" y1="100" x2="400" y2="120" stroke="#ff6b35" stroke-width="2" opacity="0.4"/>
  <line x1="320" y1="140" x2="420" y2="160" stroke="#ff6b35" stroke-width="2" opacity="0.3"/>
  
  <!-- Text placeholder -->
  <rect x="50" y="50" width="200" height="8" fill="#333" opacity="0.7"/>
  <rect x="50" y="70" width="150" height="6" fill="#666" opacity="0.5"/>
  <rect x="50" y="85" width="180" height="6" fill="#666" opacity="0.5"/>
  
  <!-- Professional elements -->
  <rect x="400" y="280" width="120" height="80" fill="white" opacity="0.9" rx="8"/>
  <rect x="410" y="290" width="100" height="4" fill="#333" opacity="0.6"/>
  <rect x="410" y="300" width="80" height="4" fill="#666" opacity="0.4"/>
  <rect x="410" y="310" width="90" height="4" fill="#666" opacity="0.4"/>
  
  <!-- Decorative dots -->
  <circle cx="550" cy="60" r="3" fill="#ff6b35" opacity="0.6"/>
  <circle cx="560" cy="80" r="2" fill="#ff6b35" opacity="0.4"/>
  <circle cx="545" cy="100" r="2.5" fill="#ff6b35" opacity="0.5"/>
</svg>
